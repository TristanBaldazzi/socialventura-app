{
  "name": "socialventura-app",
  "version": "1.0.3",
  "description": "Application Electron pour Social Ventura, plateforme de marketing digital.",
  "main": "main.js",
  "author": "Tristan Baldazzi",
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "publish": "electron-builder --publish always"
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-updater": "^6.1.7"
  },
  "build": {
    "appId": "com.socialventura.app",
    "productName": "SocialVentura",
    "mac": {
      "identity": null,
      "category": "public.app-category.social-networking",
      "icon": "assets/logo.png"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/logo.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/logo.png"
    }
  }
}
