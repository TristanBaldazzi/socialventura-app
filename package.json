{
  "name": "social-ventura-app",
  "version": "1.0.0",
  "description": "Application Electron pour Social Ventura, plateforme de marketing digital.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.socialventura.app",
    "productName": "Social Ventura",
    "mac": {
      "category": "public.app-category.social-networking",
      "icon": "assets/logo.png"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/logo.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/logo.png"
    }
  }
} 